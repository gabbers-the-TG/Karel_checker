/**
 * Welcome to the Stanford Karel IDE.
 * This is a free space for you to 
 * write any Karel program you want.
 **/
function main(){
/**  
   oneLine();
   keepGoing();
   putBeeper();
  
  
   turnRight();
   move();
   otherLineKinda();
**/
  evenColm();
  nextColm();
  oddColm();
   
   
  
  
   

  
}

function evenColm(){
     putBeeper();
   while(frontIsClear()){
      move();
      while(noBeepersPresent()){
         move();
         putBeeper();  
      }
   } 
}

function nextColm(){
   
   turnRight();
   turnRight();
   keepGoing();
   turnRight();
   move();
   turnRight();
   
}

function oddColm(){
    while(frontIsClear()){
      move();
      
      while(noBeepersPresent()){
         putBeeper();
      }
      move();
   }
   
   
}








function oneLine(){
      putBeeper();
  while(frontIsClear()){
      
      turnLeft();
      move();
      turnRight();
      move();
      putBeeper();
  }
  turnRight();
     
   
}



function otherLineKinda(){ //one line(kinda)  
       
   while(frontIsClear()){
         turnRight();
         move();
         putBeeper();
         turnLeft();
         move();
         
   }
   turnRight();
   move();
   putBeeper();
}

function keepGoing(){
   while(frontIsClear()){
      move();
    }
   
}


